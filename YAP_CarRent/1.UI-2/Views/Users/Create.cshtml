@model _1.UI_2.Models.EditUserVM

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <p id="Invalid" class="ya-error"></p>
    <div class="form-horizontal">
        <h4>User</h4>
        <table>

            <tr>
                <td>
                    <div class="h4">שם</div>
                    <input class="form-field" type="text" onblur="InvalidName(this)" oninvalid="InvalidMail(this);" required placeholder="שם" id="inputFName" title="שם פרטי" name="FirstName" />
                </td>
                <td>
                    <div class="h4">משפחה</div>
                    <input class="form-field" type="text" onblur="InvalidName(this)" oninvalid="InvalidMail(this);" required placeholder="משפחה" id="inputLName" title="שם משפחה" name="LastName" />
                </td>
                <td>
                    <div class="h4">תעודת זהות</div>
                    <input class="form-field" type="number" onblur="validTZ(this)" oninvalid="InvalidMail(this);" required placeholder="תעודת זהות" id="inputTZ" title="תעודת זהות" name="TZ" />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="h4">תאריך לידה</div>
                    <input class="form-field" type="date" id="inputBirthday" title="תאריך לידה" name="Birthday" />
                </td>
                <td>

                    <div class="h4">דואר אלקטרוני</div>
                    <input class="form-field" type="email" onblur="validEmail(this);" oninvalid="InvalidMail(this);" id="inputEmail" title="דוא''ל" name="Email" />
                </td>
                <td>

                    <div>
                        <span class="ya-header">M</span>
                        <input type="radio" name="Gender" value="M" checked />
                    </div>
                    <div>
                        <span class="ya-header">F&nbsp;</span>
                        <input type="radio" name="Gender" value="F" />
                    </div>


                </td>
            </tr>
            <tr>
                <td>
                    <div class="h4">סיסמה</div>
                    <input class="form-field" type="text" oninvalid="InvalidPass(this);" required title="סיסמה" id="inputPassword1" placeholder="******" name="Password" />
                </td>
                <td>
                    <div class="h4">הרשאות</div>
                    <label id="userRoles" class="form-field" name="UserRoles"></label>
                </td>
                <td>
                    <div>
                        <select id="roles">
                            @foreach (var role in Model.Roles2)
                            {
                                <option>@role.Name</option>
                            }
                        </select>
                        <a onclick="addRole()" class="alert-success">הוסף</a>
                        <a onclick="removeRole()" class="alert-danger">הסר</a>
                    </div>
                </td>

            </tr>
        </table>

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })




    </div>

    <div class="col-md-4">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>



}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts{


    <link href="~/css/Users/Edit.css" rel="stylesheet" />
    <script src="~/Scripts/Jquery/Login/Validations/validations.js"></script>
    <script src="~/Scripts/Jquery/Login/Validations/roles.js"></script>
}