@model _1.UI_2.Models.FindCarVM
@{
    ViewBag.Title = "ניהול";
}

<div ng-app="carsApp" ng-controller="carsController">
    <div class="container-full-width">
        <!-- Wrapper for slides -->

        <div>
            <div class="col-12">
                <img class="img-responsive ya-img" src="~/Content/jeep8eshort.jpg">
                <div class="container ya-center">
                    <div class="carousel-centered ya-top30">
                        <h1 class="ya-car-search">{{title}}</h1>

                        <ul class="ya-ul navbar-nav-right">


                            <li class="nav-item">
                                <h2>סניף</h2>
                                <input type="search" data-id="33333" id="branchID" ng-change="changBranch()" ng-model="currentBranch" placeholder="בחר סניף" list="branchesList" />
                            </li>
                            <li class="nav-item">
                                <h2>קבוצת רכבים</h2>
                                <input type="search" ng-disabled="disable" ng-model="currentGroup" placeholder="בחר קבוצה" list="groupList" />
                            </li>

                            <li class="nav-item">
                                <h2>יצרן</h2>
                                <input type="search" ng-disabled="disable" ng-model="currentManufacturer" placeholder="בחר יצרן" list="manufacturerList" />
                            </li>
                            <li class="nav-item">
                                <div>  <button ng-click="cleanSearch()" class="btn btn-info">נקה חיפוש</button></div>
                                <br />
                                <div> <button ng-click="search()" ng-disabled="disable" class="btn btn-success">חפש</button></div>
                            </li>



                        </ul>
                        <h2 class="right">{{searchText}}&nbsp;</h2>
                        <ul class="nav men"></ul>
                        <div class="col-md-2">


                        </div>
                        <datalist id="branchesList">
                            @{foreach (var b in Model.Branches)
                                {
                                    <option id="@b.Text" data-id="@b.Value">@b.Text</option>
                                } }

                        </datalist>
                        <datalist id="manufacturerList">
                            @{foreach (var m in Model.Manufacturers)
                                {
                                    <option id="@m.Text" data-id="@m.Value">@m.Text</option>

                                } }


                        </datalist>
                        <datalist id="modelsList">
                            <option ng-repeat="m in modelList">{{m.Name}}</option>

                        </datalist><datalist id="groupList">
                            @{foreach (var g in Model.Groups)
                                {
                                    <option id="@g.Text" data-id="@g.Value">@g.Text</option>
                                } }

                        </datalist>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-hover">
        <tr>
            <th>&nbsp;</th>
            <th>מספר רכב</th>
            <th>מודל</th>
            <th>תמונה</th>
            <th>סניף</th>
            <th>סטטוס</th>
            <th>&nbsp;</th>
        </tr>
        <tr ng-repeat="c in carsList">
            <td><a href="/Cars/Edit?id={{c.Serial}}">ערוך</a></td>
            <td>{{c.Serial}}</td>
            <td>{{c.Model}}</td>
            <td><img src="~/Content/Images/Cars/{{c.Image}}" /></td>
            <td>{{c.Branch}}</td>
            <td>{{c.Status}}</td>
            <td><a href="/Cars/Delete?id={{c.Serial}}">מחק</a></td>
        </tr>
    </table>
    <div>

    </div>



</div>



@section scripts{
    <!--Angular-->
    <script src="~/Scripts/angular.min.js"></script>
    <!--App-->
    <script src="~/Scripts/Angular/Cars/ManagerApp/carsApp.js"></script>
    <!--Controller-->
    <script src="~/Scripts/Angular/Cars/ManagerApp/Controllers/carsCntroller.js"></script>
    <!--Services-->
    <script src="~/Scripts/Angular/Cars/ManagerApp/Services/carsService.js"></script>
    <script src="~/Scripts/Angular/GlobleServices/Global.js"></script>
    <!--App-->
    <link href="~/css/Cars/Manage.css" rel="stylesheet" />
}
