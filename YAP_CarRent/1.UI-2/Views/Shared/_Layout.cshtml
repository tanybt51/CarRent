<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>AutoDa</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    <!-- GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet" type="text/css">
    <link href="~/asentus/vendor/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/asentus/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <!-- PAGE LEVEL PLUGIN STYLES -->
    <link href="~/asentus/css/animate.css" rel="stylesheet">
    <link href="~/asentus/vendor/swiper/css/swiper.min.css" rel="stylesheet" type="text/css" />

    <!-- THEME STYLES -->
    <link href="~/asentus/css/layout.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.css" />
    <!-- Favicon -->
    <link rel="shortcut icon" href="favicon.ico" />
</head>
<body dir="rtl">
    <!--========== HEADER ==========-->
    <header class="header navbar-fixed-top">
        <!-- Navbar -->
        <nav class="navbar" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="menu-container">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="toggle-icon"></span>
                    </button>

                    <!-- Logo -->
                    <div class="col-xs-2">
                        <a style="text-decoration:none" href="/Home/Index">@Html.Partial("~/Views/Shared/AutoDa.cshtml")</a>
                    </div>



                    <!-- End Logo -->
                    <div class="col-xs-4 margin-l-5">@Html.Partial("~/Views/Shared/_LoginPartial.cshtml")</div>
                </div>


                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse nav-collapse">
                    <div class="menu-container">
                        <ul class="navbar-nav navbar-nav-right">


                            <li class="nav-item">@Html.ActionLink("בית", "Index", "Home", "", new { @class = "nav-item-child nav-item-hover active" })</li>
                            <li class="nav-item">@Html.ActionLink("מכוניות", "Index", "Cars", "", new { @class = "nav-item-child nav-item-hover" })</li>
                            <li class="nav-item">@Html.ActionLink("עלינו", "About", "Home", "", new { @class = "nav-item-child nav-item-hover" })</li>
                           @if (User.IsInRole("User"))
                           {
                            <li class="nav-item">@Html.ActionLink("ההזמנות שלי", "Index", "Orders", "", new { @class = "nav-item-child nav-item-hover" })</li>

                           }
                             @if (User.IsInRole("Manager"))
                            {
                                <li class="nav-item">

                                    <a class="dropdown-toggle nav-item-child nav-item-hover"
                                       data-toggle="dropdown"
                                       href="#">
                                        ניהול מלאי
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <!-- links -->
                                        <li class="nav-item">@Html.ActionLink("רשימת מכוניות", "Manage", "Cars", "", new { @class = "" })</li>
                                        <li class="nav-item">@Html.ActionLink("הוסף מכונית", "Create", "Cars", "", new { @class = "" })</li>

                                    </ul>


                                </li>
                                <li class="nav-item">

                                    <a class="dropdown-toggle nav-item-child nav-item-hover"
                                       data-toggle="dropdown"
                                       href="#">
                                        ניהול משתמשים
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <!-- links -->
                                        <li class="nav-item">@Html.ActionLink("הוסף עובד", "Create", "Users", "", new { @class = "" })</li>
                                        <li class="nav-item">@Html.ActionLink("ניהול משתמשים", "Manage", "Users", "", new { @class = "" })</li>

                                    </ul>


                                </li>



                            }




                            <li class="nav-item"></li>



                        </ul>
                    </div>
                </div>
                <!-- End Navbar Collapse -->
            </div>

        </nav>
        <!-- Navbar -->

    </header>
    <!--========== END HEADER ==========-->




    <div class="container body-content">
        @RenderBody()


       

        <a href="javascript:void(0);" class="js-back-to-top back-to-top">Top</a>
    </div>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link href="~/css/Shared/layout.css" rel="stylesheet" />

    <!-- JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- CORE PLUGINS -->
    <script src="~/asentus/vendor/jquery.min.js" type="text/javascript"></script>
    <script src="~/asentus/vendor/jquery-migrate.min.js" type="text/javascript"></script>
    <script src="~/asentus/vendor/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>

    <!-- PAGE LEVEL PLUGINS -->
    <script src="~/asentus/vendor/jquery.easing.js" type="text/javascript"></script>
    <script src="~/asentus/vendor/jquery.back-to-top.js" type="text/javascript"></script>
    <script src="~/asentus/vendor/jquery.smooth-scroll.js" type="text/javascript"></script>
    <script src="~/asentus/vendor/jquery.wow.min.js" type="text/javascript"></script>
    <script src="~/asentus/vendor/swiper/js/swiper.jquery.min.js" type="text/javascript"></script>
    <script src="~/asentus/vendor/masonry/jquery.masonry.pkgd.min.js" type="text/javascript"></script>
    <script src="~/asentus/vendor/masonry/imagesloaded.pkgd.min.js" type="text/javascript"></script>

    <!-- PAGE LEVEL SCRIPTS -->
    <script src="~/asentus/js/layout.min.js" type="text/javascript"></script>
    <script src="~/asentus/js/components/wow.min.js" type="text/javascript"></script>
    <script src="~/asentus/js/components/swiper.min.js" type="text/javascript"></script>
    <script src="~/asentus/js/components/masonry.min.js" type="text/javascript"></script>

    <link href="~/css/Login/Index.css" rel="stylesheet" />
    @RenderSection("Scripts", required: false)
</body>
</html>
